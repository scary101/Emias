<Window x:Class="Emias.View.MainUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Emias.View"
        mc:Ignorable="d"
        Title="MainUserWindow" Height="550" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource FocusBrush}">
            <!-- Содержимое первой колонки -->
        </Border>

        <Border Grid.Column="1" Background="{DynamicResource PrimaryBrush}">
            <!-- Содержимое второй колонки -->
        </Border>

    </Grid>
</Window>
